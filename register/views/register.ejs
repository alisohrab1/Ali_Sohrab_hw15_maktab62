<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Sign In </h2>

    
        <!-- Login Form -->
        <form>   
          <input type="text" name="username" id="username" class="fadeIn second" placeholder="Username" /> 
          
          <input type="text" name="password" id="password"  class="fadeIn third"  placeholder="Password"/> <br />
      
          <input type="text" name="firstname" id="firstname"  class="fadeIn third" placeholder="Firstname" /> <br />
         
          <input type="text" name="lastname" id="lastname"   class="fadeIn third" placeholder="Lastname"/> <br />
          <label for="gender">Gender:</label> <br>
          <div class="container d-flex col-lg-6">
           
            <select class="form-select" aria-label="Default select example" name="gender" id="gender">
              <option value="male">male</option>
            <option value="female">female</option>
            <option value="other" selected>Rather not say</option>
            </select>
          </div>      
          <input type="button" id="registerBtn" style="margin-top: 10px;" value="Register">
        </form>
    
        <!-- Remind Passowrd -->
        <div id="formFooter">
          <span>Already have an account?</span>
          <a class="underlineHover" href="http://localhost:5000/login">Login</a>
        </div>
    
      </div>
    </div>






  </body>
  <script src="/js/register.js"></script>
  <script src="/js/registerVal.js"></script>
</html>
